    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">7dp</item>
        <item name="boxCornerRadiusBottomStart">7dp</item>
        <item name="boxCornerRadiusTopEnd">7dp</item>
        <item name="boxCornerRadiusBottomEnd">7dp</item>
    </style>

    <style name="EditTextHintStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@font/open_sans_light_italic</item>
    </style>

</resources>